<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_11"
    tools:context=".Trivia">


    <ImageButton
        android:id="@+id/TrophyIcon"
        android:layout_width="171dp"
        android:layout_height="136dp"
        android:layout_marginStart="264dp"
        android:layout_marginEnd="485dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_5" />

    <ImageButton
        android:id="@+id/imageView8"
        android:layout_width="175dp"
        android:layout_height="136dp"
        android:layout_marginStart="709dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="36dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_8" />

    <ImageButton
        android:id="@+id/imageView7"
        android:layout_width="173dp"
        android:layout_height="135dp"
        android:layout_marginStart="496dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_7" />

    <ImageButton
        android:id="@+id/imageView5"
        android:layout_width="171dp"
        android:layout_height="136dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="704dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_6" />

    <Button
        android:id="@+id/Answer4"
        android:layout_width="810dp"
        android:layout_height="139dp"
        android:layout_marginTop="840dp"
        android:layout_marginBottom="290dp"
        android:text="Answer 4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Answer3"
        android:layout_width="810dp"
        android:layout_height="139dp"

        android:layout_marginTop="680dp"
        android:layout_marginBottom="440dp"
        android:text="Answer 3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Answer2"
        android:layout_width="810dp"
        android:layout_height="139dp"
        android:layout_marginTop="520dp"
        android:layout_marginBottom="590dp"
        android:text="Answer 2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Answer1"
        android:layout_width="810dp"
        android:layout_height="139dp"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="740dp"
        android:text="Answer 1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Question"

        android:layout_width="802dp"
        android:layout_height="317dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="928dp"
        android:background="#d3d3d3"
        android:gravity="center"
        android:text="Question goes here"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/Prompt"
        android:layout_width="795dp"
        android:layout_height="115dp"
        android:background="@drawable/lavender_border"
        android:drawablePadding="8dp"
        android:hint="ENTER YOUR NAME HERE:"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/Question"
        app:layout_constraintStart_toStartOf="@+id/Question"
        app:layout_constraintEnd_toEndOf="@+id/Question"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
        android:gravity="center"
        android:text="6"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gridNine"
        app:layout_constraintEnd_toEndOf="@+id/box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/gridFive"
        app:layout_constraintTop_toBottomOf="@+id/gridThree"
        app:layout_constraintVertical_bias="0.971" />

    <TextView
        android:id="@+id/gridSeven"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:gravity="center"
        android:text="7"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/box"
        app:layout_constraintTop_toBottomOf="@+id/gridFour"
        app:layout_constraintEnd_toStartOf="@id/gridEight"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/gridEight"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:gravity="center"
        android:text="8"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/gridFive"
        app:layout_constraintEnd_toStartOf="@+id/gridNine"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/gridSeven" />

    <TextView
        android:id="@+id/gridNine"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:gravity="center"
        android:text="9"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/gridSix"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintEnd_toEndOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/gridEight" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudoku"
        android:textColor="@color/purple_700"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="83dp"
        android:layout_height="120dp"
        android:background="#0AFFFFFF"
        android:drawableStart="@drawable/baseline_home_24"
        android:drawablePadding="8dp"
        android:padding="15dp"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="629dp" />


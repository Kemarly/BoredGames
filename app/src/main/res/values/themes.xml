<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

<!--    <style name="Theme.BoredGames" parent="android:Theme.Material.Light.NoActionBar" />-->
        <style name="Theme.BoredGames" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <!-- Primary color -->
    <item name="colorPrimary" type="color">@color/lavender</item>
    <item name="colorPrimaryVariant" type="color">@color/lavender</item>
    <item name="colorOnPrimary" type="color">@color/white</item>

    <!-- Secondary color -->
    <item name="colorSecondary" type="color">@color/teal_200</item>
    <!-- Specify a different name for the second colorSecondary -->
    <item name="colorSecondaryVariant" type="color">@color/teal_700</item>
    <item name="colorOnSecondary" type="color">@color/black</item>

    <!-- SplashScreen -->
    <style name="Theme.AppCompat.SplashScreen" parent= "Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/darkYellow</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash1</item>
        <item name="postSplashScreenTheme">@style/Theme.BoredGames</item>
    </style>
</resources>